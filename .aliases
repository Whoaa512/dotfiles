  function ads() {
    arc diff `gupstream`
  }
  function advs() {
    arc diff --verbatim `gupstream`
  }
  function adrs() {
    arc diff -m 'rebase' `gupstream`
  }
  function adms() {
    arc diff `gupstream` -m "'$1'"
  }
  function adps() {
    arc diff --plan-changes `gupstream`
  }
  function adpvs() {
    arc diff --plan-changes --verbatim `gupstream`
  }

