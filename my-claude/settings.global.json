{
  "permissions": {
    "allow": [
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(git add:*)",
      "Bash(bazel build:*)",
      "Bash(bazel test:*)",
      "Bash(git commit:*)",
      "Bash(grep:*)",
      "Bash(cp:*)",
      "Bash(tree:*)",
      "WebFetch(domain:pkg.go.dev)",
      "Bash(jq:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr status:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh api repos/:owner/:repo/pulls/$(gh pr view --json number -q .number)/comments)",
      "Bash(bazel info:*)",
      "Bash(echo \"Exit code: $?\")",
      "Bash(uuidgen)"
    ],
    "deny": []
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff; say \"claude is waiting\"; echo -e \"\\033]0;Claude Waiting...\\007\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff; say \"claude is waiting\"; echo -e \"\\033]0;Claude Waiting...\\007\""
          }
        ]
      }
    ]
  }
}
