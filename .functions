# Create a data URL from a file
function dataurl() {
  local mimeType=$(file -b --mime-type "$1");
  if [[ $mimeType == text/* ]]; then
    mimeType="${mimeType};charset=utf-8";
  fi
  echo "data:${mimeType};base64,$(openssl base64 -in "$1" | tr -d '\n')";
}

# Create a git.io short URL
function gitio() {
  if [ -z "${1}" -o -z "${2}" ]; then
    echo "Usage: \`gitio slug url\`";
    return 1;
  fi;
  curl -i http://git.io/ -F "url=${2}" -F "code=${1}";
}

# Start an HTTP server from a directory, optionally specifying the port
# Renders .md files as HTML (GitHub Flavored Markdown)
function server() {
  local port="${1:-8000}";
  sleep 1 && open "http://localhost:${port}/" &
  uv run --quiet - "$port" << 'PYEOF'
# /// script
# dependencies = ["mistune"]
# ///
import http.server, sys, os, mistune

md = mistune.create_markdown(plugins=['strikethrough', 'table', 'task_lists', 'url'])

class Handler(http.server.SimpleHTTPRequestHandler):
    def do_GET(self):
        if self.path.endswith(".md"):
            path = self.translate_path(self.path)
            if os.path.isfile(path):
                with open(path, "r") as f:
                    content = md(f.read())
                html = f'<!DOCTYPE html><html><head><meta charset="utf-8"><style>body{{max-width:800px;margin:40px auto;padding:0 20px;font-family:sans-serif;line-height:1.6}}pre{{background:#f4f4f4;padding:1em;overflow-x:auto}}code{{background:#f4f4f4;padding:2px 5px}}</style></head><body>{content}</body></html>'
                self.send_response(200)
                self.send_header("Content-type", "text/html; charset=utf-8")
                self.end_headers()
                self.wfile.write(html.encode())
                return
        super().do_GET()

http.server.test(HandlerClass=Handler, port=int(sys.argv[1]) if len(sys.argv) > 1 else 8000)
PYEOF
}

# Start a PHP server from a directory, optionally specifying the port
